@model IEnumerable<CoVaccinate.now.Models.AgeGroup>

@{
    ViewData["Title"] = "Recommended Age Group";
}

<h1 class="py-3 main__heading"> Recommended <span>Age Group</span></h1>



    <a  class="button button__create" asp-action="Create">
        Create Age Group <i class="ri-add-line create__icon"></i>
    </a>

<table class="table table-striped table-responsive-xl border rounded-lg">
    <thead>
        <tr>
            <th class="pt-3 pb-3 text-center">
                @Html.DisplayNameFor(model => model.RecommendedAgeGroup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="pt-3 pb-3 text-center">
                @Html.DisplayFor(modelItem => item.RecommendedAgeGroup)
            </td>
            <td class="modification__icons">
                <a asp-action="Edit" asp-route-id="@item.AgeGroupId"><i class="ri-edit-box-line modify_icon"></i></a> 
                <a asp-action="Details" asp-route-id="@item.AgeGroupId"> <i class="ri-eye-fill modify_icon"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.AgeGroupId"><i class="ri-delete-bin-line modify_icon"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
