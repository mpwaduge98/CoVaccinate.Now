@model IEnumerable<CoVaccinate.now.Models.Quota>

@{
    ViewData["Title"] = "Open Hours - MOH";
}

<h1 class="main__heading">Open<span> Hours </span></h1>


    <a class="button button__create" asp-action="Create"> 
    Create New Quota <i class="ri-add-line create__icon"></i>
    </a>

<table class="table table-striped table-responsive-xl border rounded-lg">
    <thead>
        <tr>
            <th class="pt-3 pb-3 text-center">
                @Html.DisplayNameFor(model => model.VaccineCentre)
            </th>
            <th class="pt-3 pb-3 text-center">
                @Html.DisplayNameFor(model => model.OpenDays)
            </th>
            <th class="pt-3 pb-3 text-center">
                @Html.DisplayNameFor(model => model.OpenHours)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="pt-3 pb-3 text-center">
                @Html.DisplayFor(modelItem => item.VaccineCentre.VaccineCentreName)
            </td>
            <td class="pt-3 pb-3 text-center">
                @Html.DisplayFor(modelItem => item.OpenDays)
            </td>
            <td class="pt-3 pb-3 text-center">
                @Html.DisplayFor(modelItem => item.OpenHours)
            </td>
            <td class="modification__icons">
                <a asp-action="Edit" asp-route-id="@item.QuotaID"><i class="ri-edit-box-line modify_icon"></i></a> 
                <a asp-action="Details" asp-route-id="@item.QuotaID"> <i class="ri-eye-fill modify_icon"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.QuotaID"><i class="ri-delete-bin-line modify_icon"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
