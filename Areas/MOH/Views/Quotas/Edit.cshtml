@model CoVaccinate.now.Models.Quota

@{
    ViewData["Title"] = "Edit";
}

<h1 class="main__heading">Edit</h1>

<h4 class="subheading">Quota</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuotaID" />
            <div class="form-group">
                <label asp-for="VaccineCentreId" class="control-label"></label>
                <select asp-for="VaccineCentreId" class="form-control" asp-items="ViewBag.VaccineCentreId"></select>
                <span asp-validation-for="VaccineCentreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenDays" class="control-label"></label>
                <input asp-for="OpenDays" class="form-control" />
                <span asp-validation-for="OpenDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenHours" class="control-label"></label>
                <input asp-for="OpenHours" class="form-control" />
                <span asp-validation-for="OpenHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

